@using PizzaShop.Models

@if (OrderState != null && OrderState.ShowingConfigureDialog && OrderState.ConfiguringPizza != null)
{
    var pizza = OrderState.ConfiguringPizza;
    
    <div class="dialog-container">
        <div class="dialog">
            <div class="dialog-header">
                <h2>Configure @pizza.Name</h2>
                <div class="pizza-price">$@pizza.Price.ToString("0.00")</div>
            </div>
            
            <div class="dialog-body">
                <div class="form-group">
                    <div class="size-control">
                        <label>Size: <strong>@pizza.Size</strong></label>
                        <div class="slider-container">
                            <span class="size-label">Small</span>
                            <input type="range" 
                                   min="0" 
                                   max="2" 
                                   step="1" 
                                   @bind-value="sizeIndex"
                                   @bind-value:event="oninput"
                                   class="size-slider" />
                            <span class="size-label">Large</span>
                        </div>
                        <div class="size-description">
                            @(pizza.Size switch
                            {
                                "Small" => "Perfect for a light meal",
                                "Medium" => "Great for one person",
                                "Large" => "Ideal for sharing",
                                _ => ""
                            })
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Quantity:</label>
                    <div class="quantity-control">
                        <button class="quantity-btn" @onclick="DecreaseQuantity" :disabled="pizza.Quantity <= 1">-</button>
                        <span class="quantity-display">@pizza.Quantity</span>
                        <button class="quantity-btn" @onclick="IncreaseQuantity">+</button>
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Special Instructions:</label>
                    <textarea @bind="pizza.SpecialInstructions" 
                             class="form-control" 
                             placeholder="Any special instructions? (e.g., no onions, extra cheese, etc.)"
                             rows="3"></textarea>
                </div>
            </div>
            
            <div class="dialog-footer">
                <button @onclick="OnCancel" class="btn btn-secondary">Cancel</button>
                <button @onclick="OnConfirm" class="btn btn-primary">
                    Add to Order - $@((pizza.Price).ToString("0.00"))
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public EventCallback OnCancel { get; set; }
    
    [Parameter]
    public EventCallback OnConfirm { get; set; }
    
    [Inject]
    public OrderState OrderState { get; set; } = null!;
    
    private int sizeIndex = 1; // Default to Medium
    private readonly string[] sizes = { "Small", "Medium", "Large" };
    
    protected override void OnInitialized()
    {
        if (OrderState.ConfiguringPizza != null)
        {
            sizeIndex = Array.IndexOf(sizes, OrderState.ConfiguringPizza.Size);
            if (sizeIndex == -1) sizeIndex = 1; // Default to Medium if not found
        }
    }
    
    private void DecreaseQuantity()
    {
        if (OrderState.ConfiguringPizza != null && OrderState.ConfiguringPizza.Quantity > 1)
        {
            OrderState.ConfiguringPizza.Quantity--;
        }
    }
    
    private void IncreaseQuantity()
    {
        if (OrderState.ConfiguringPizza != null)
        {
            OrderState.ConfiguringPizza.Quantity++;
        }
    }
    
    private string Size
    {
        get => sizes[sizeIndex];
        set
        {
            sizeIndex = Array.IndexOf(sizes, value);
            if (OrderState.ConfiguringPizza != null)
            {
                OrderState.ConfiguringPizza.Size = value;
            }
        }
    }
}

