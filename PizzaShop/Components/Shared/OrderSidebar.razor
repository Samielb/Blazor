@using PizzaShop.Models
@using PizzaShop.Services
@inject OrderState OrderState

@if (OrderState.ShowingOrderSidebar)
{
    <div class="order-sidebar">
        <div class="order-header">
            <h3>Your Order</h3>
            <button class="close-btn" @onclick="OrderState.ToggleOrderSidebar">
                &times;
            </button>
        </div>
        
        <div class="order-items">
            @if (OrderState.OrderItems.Any())
            {
                foreach (var item in OrderState.OrderItems)
                {
                    <div class="order-item">
                        <div class="item-details">
                            <div class="item-name">
                                @item.Quantity x @item.Name (@item.Size)
                                @if (!string.IsNullOrEmpty(item.SpecialInstructions))
                                {
                                    <div class="special-instructions">@item.SpecialInstructions</div>
                                }
                            </div>
                            <div class="item-price">$@item.Price.ToString("0.00")</div>
                        </div>
                        <button class="remove-btn" @onclick="() => OrderState.RemovePizzaFromOrder(item)">
                            Remove
                        </button>
                    </div>
                }
                
                <div class="order-total">
                    <span>Total:</span>
                    <span>$@OrderState.TotalPrice.ToString("0.00")</span>
                </div>
                
                <button class="checkout-btn">
                    Checkout ($@OrderState.TotalPrice.ToString("0.00"))
                </button>
            }
            else
            {
                <div class="empty-cart">
                    <p>Your cart is empty</p>
                    <p>Add some delicious pizzas to get started!</p>
                </div>
            }
        </div>
    </div>
}

<style>
    .order-sidebar {
        position: fixed;
        top: 0;
        right: 0;
        width: 100%;
        max-width: 380px;
        height: 100vh;
        background: white;
        box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        display: flex;
        flex-direction: column;
    }
    
    .order-header {
        padding: 1.5rem;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .close-btn {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 0.5rem;
        line-height: 1;
    }
    
    .order-items {
        flex: 1;
        overflow-y: auto;
        padding: 1.5rem;
    }
    
    .order-item {
        padding: 1rem 0;
        border-bottom: 1px solid #f0f0f0;
    }
    
    .item-details {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }
    
    .item-name {
        font-weight: 500;
    }
    
    .special-instructions {
        font-size: 0.85rem;
        color: #666;
        font-style: italic;
        margin-top: 0.25rem;
    }
    
    .item-price {
        font-weight: 600;
    }
    
    .remove-btn {
        background: none;
        border: 1px solid #ff4444;
        color: #ff4444;
        padding: 0.25rem 0.75rem;
        border-radius: 4px;
        font-size: 0.85rem;
        cursor: pointer;
        transition: all 0.2s;
    }
    
    .remove-btn:hover {
        background: #ffebee;
    }
    
    .order-total {
        display: flex;
        justify-content: space-between;
        font-size: 1.25rem;
        font-weight: 600;
        margin: 1.5rem 0;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }
    
    .checkout-btn {
        width: 100%;
        padding: 1rem;
        background: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }
    
    .checkout-btn:hover {
        background: #45a049;
    }
    
    .empty-cart {
        text-align: center;
        padding: 2rem 0;
        color: #666;
    }
    
    .empty-cart p:first-child {
        font-size: 1.2rem;
        margin-bottom: 0.5rem;
    }
</style>
