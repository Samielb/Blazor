@inject OrderState OrderState

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <div class="cart-button-container">
                <button class="cart-button" @onclick="ToggleOrderSidebar">
                    <span class="cart-icon">ðŸ›’</span>
                    @if (OrderState.TotalItems > 0)
                    {
                        <span class="cart-badge">@OrderState.TotalItems</span>
                    }
                </button>
            </div>
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
